{
  "name": "8spirits-backend-mongodb",
  "version": "3.0.0",
  "description": "Ultra-Advanced Enterprise-Level Backend API for 8 Spirits E-commerce Platform with MongoDB - Beyond Total Wine Level Features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seed.js",
    "seed:products": "node scripts/seedProducts.js",
    "seed:users": "node scripts/seedUsers.js",
    "seed:all": "node scripts/seedAll.js",
    "analytics:generate": "node scripts/generateAnalytics.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "generate:docs": "node scripts/generateDocs.js",
    "backup:db": "node scripts/backupDatabase.js",
    "restore:db": "node scripts/restoreDatabase.js",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrateRollback.js",
    "optimize:prices": "node scripts/optimizePrices.js",
    "segment:customers": "node scripts/segmentCustomers.js",
    "sync:inventory": "node scripts/syncInventory.js",
    "export:data": "node scripts/exportData.js",
    "import:data": "node scripts/importData.js",
    "health:check": "node scripts/healthCheck.js",
    "load:test": "artillery run tests/load/artillery.yml",
    "docker:build": "docker build -t 8spirits-api .",
    "docker:run": "docker-compose up",
    "docker:stop": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "benchmark": "node scripts/benchmark.js"
  },
  "keywords": [
    "ecommerce",
    "spirits",
    "wine",
    "liquor",
    "api",
    "rest",
    "graphql",
    "nodejs",
    "express",
    "mongodb",
    "mongoose",
    "stripe",
    "payment",
    "subscription",
    "inventory",
    "analytics",
    "recommendations",
    "machine-learning",
    "fraud-detection",
    "ab-testing",
    "microservices",
    "event-driven",
    "multi-currency",
    "internationalization",
    "elasticsearch",
    "redis",
    "websockets",
    "real-time",
    "enterprise"
  ],
  "author": "8 Spirits Team",
  "license": "PRIVATE",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "mongoose-paginate-v2": "^1.7.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "slugify": "^1.6.6",
    "stripe": "^14.10.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "0x": "^5.7.0",
    "apidoc": "^1.2.0",
    "artillery": "^2.0.3",
    "autocannon": "^7.15.0",
    "benchmark": "^2.1.4",
    "chai": "^4.3.10",
    "clinic": "^13.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "docker-compose": "^0.24.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "faker-js": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^9.1.3",
    "nock": "^13.5.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "pm2": "^5.3.0",
    "prettier": "^3.1.1",
    "redoc-cli": "^0.13.21",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "*.spec.js",
      "node_modules"
    ],
    "delay": "2500"
  }
}
